#!/bin/bash

CURRENT_DIR="$(pwd)"
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "$SCRIPT_DIR" || exit 1

if [ $# -eq 0 ]; then
    echo "Usage: $(basename "$0") <pipeline.yaml> [pipeline2.yaml...]"
    cd "$CURRENT_DIR"
    exit 1
fi

JAR_PATH="target/verifyica-pipelines-0.0.1.jar"

if [ ! -f "$JAR_PATH" ]; then
    JAR_PATH="verifyica-pipelines-0.0.1.jar"
fi

if [ ! -f "$JAR_PATH" ]; then
    JAR_PATH=".verifyica-pipelines/verifyica-pipelines-0.0.1.jar"
fi

if [ ! -f "$JAR_PATH" ]; then
    JAR_PATH=".verifyica/verifyica-pipelines-0.0.1.jar"
fi

if [ ! -f "$JAR_PATH" ]; then
    echo "verifyica-pipelines-0.0.1.jar not found"
    cd "$CURRENT_DIR"
    exit 1
fi

PREFIXED_ARGS=()
for arg in "$@"; do
    PREFIXED_ARGS+=("${CURRENT_DIR}/${arg}")
done

java -jar "${JAR_PATH}" "${PREFIXED_ARGS[@]}"

cd "$CURRENT_DIR"
